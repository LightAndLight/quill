                     , text
                     , transformers
                     , trifecta
                     , vector
  hs-source-dirs:      src
  ghc-options:         -Wall -Werror
  default-language:    Haskell2010

executable quill
  main-is:             Main.hs
  build-depends:       base ^>=4.12.0.0
                     , capnp == 0.4.0.0
                     , quill-schemas
                     , bytestring
                     , lens
                     , network
                     , optparse-applicative
                     , process
  hs-source-dirs:      src
  default-language:    Haskell2010

