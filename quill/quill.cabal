                     , capnp == 0.4.0.0
                     , quill-schemas
                     , bytestring
                     , network
                     , optparse-applicative
  hs-source-dirs:      src
  default-language:    Haskell2010

test-suite quill-tests
  type:                exitcode-stdio-1.0
  main-is:             Main.hs
  other-modules:       Test.Compile
                     , Test.Check
                     , Test.Parse
                     , Test.Query
