                       Capnp.Gen.Response
                     , Capnp.Gen.Response.Pure
                     , Capnp.Gen.Request
                     , Capnp.Gen.Request.Pure
  other-modules:       
                       Capnp.Gen.ById.Xa3a72b9143c87ce3.Pure
